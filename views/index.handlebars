<div class="container">
    <div class="row">
        <div class="col-md-4"></div>
        <div class="col-md-4" id="title">
            <h1>Eat Da Burger</h1>
        </div>
        <div class="col-md-4"></div>
    </div>
    <div class="row">
        <div class="col-md-4"></div>
        <div class="col-md-4" id="bdiv">
            <img id="burger" src="/assets/img/burger.png">
        </div>
        <div class="col-md-4"></div>
    </div>
    <div class="row">
        <div class="col-md-4" id="burgersdisplay">
            <ul>
                {{#each burgers}}
                {{/each}}
            </ul>
        </div>
        <div class="col-md-4" id="newbdiv">
            <form>
                <div class="form-row">
                    <div class="col">
                        <input type="text" class="form-control" id="newbinput" placeholder="Add new burger here!">
                    </div>
                </div>
            </form>
            <div class="col-md-4"></div>
        </div>
    </div>